{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend (ts-node)",
      "runtimeArgs": [
        "--loader",
        "ts-node/esm"
      ],
      "program": "${workspaceFolder}/backend/src/server.ts",
      "cwd": "${workspaceFolder}/backend",
      "skipFiles": ["<node_internals>/**"],
      "envFile": "${workspaceFolder}/backend/.env",
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
